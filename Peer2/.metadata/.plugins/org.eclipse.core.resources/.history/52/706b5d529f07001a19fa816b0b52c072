import java.io.BufferedReader;
import java.io.DataOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.net.InetSocketAddress;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.StringTokenizer;

public class Upload implements Runnable {

	ServerSocket server;
	Socket socket;
	InetSocketAddress peerAddress;
	BufferedReader dis;
	DataOutputStream dos;
	FileInputStream fis;
	File file;
	OutputStream os;
	int port;
	String filename;
	String fileInfo;
	int tradeNum;
	int remain;
	int bitmapLength;
	int[] bitmapIndex;
	int[] position;
	StringTokenizer st;

	long totalReadBytes = 0;
	byte[] buffer;

	public Upload() {
		try {
			bitmapIndex = new int[3];
			position = new int[3];
			port = Client.myPort;
			server = new ServerSocket(port);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	public void run() {
		try {
			while (true) {
				socket = server.accept();
				peerAddress = (InetSocketAddress) socket.getRemoteSocketAddress();

				System.out.println("A peer(" + peerAddress.getAddress().getHostAddress() + ") is connected. (Port: "
						+ peerAddress.getPort() + ")");

				dis = new BufferedReader(new InputStreamReader(socket.getInputStream()));
				dos = new DataOutputStream(socket.getOutputStream());
				os = socket.getOutputStream();

				filename = ".\\From\\" + dis.readLine();
				System.out.println("\nClient requests < " + filename + " >");
				file = new File(filename);
				if (!file.exists()) {
					System.out.println("But there is no file");
					dos.writeBytes("-1\n");
					dos.close();
					dis.close();
					os.close();
				}
				dos.writeBytes("1\n");
				fis = new FileInputStream(filename);

				String peerInput;
				for (int i = 0; i < 3; i++) {
					bitmapIndex[i] = -1;
					position[i] = -1;
				}

				while (true) {
					peerInput = dis.readLine();
					if (peerInput.equals("end")) {
						break;
					}
					st = new StringTokenizer(peerInput);
					st.nextToken();
					dos.writeBytes(Client.presentBitmap[Integer.parseInt(st.nextToken())] + "\n");
				}
				
				for (int i = 0; i < 3; i++) {
					peerInput = dis.readLine();
					st = new StringTokenizer(peerInput);
					bitmapIndex[i] = Integer.parseInt(st.nextToken());
					position[i] = Integer.parseInt(st.nextToken());
					if (bitmapIndex[i] != -1) {
						fis.getChannel().position(Client.BUFFER_SIZE * (32 * bitmapIndex[i] + position));
						readBytes = fis.read(buffer);
						os.write(buffer, 0, readBytes);	
					}
				}
				
			}
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			try {
				dos.close();
				dis.close();
				os.close();
				fis.close();
			} catch (Exception e) {
				System.out.println("upload   finally");
				e.printStackTrace();
			}

		}
	}
}
